  "formulas": {
    "vinyl_cost": "vinyl.cost_per_sq_in * total_vinyl_area_sq_in * (1 + waste_margin_pct)",
    "transfer_tape_cost": "if cost_per_sq_in known: cost_per_sq_in * total_vinyl_area_sq_in; else use per_pack_allocation_override",
    "labor_cost": "(labor_rate_per_hour/60) * minutes_per_pack, unless labor_cost_override provided",
    "packaging_cost": "envelope.unit_cost",
    "postage_cost": "stamp.unit_price",
    "cost_before_fees": "vinyl_cost + transfer_tape_cost + labor_cost + packaging_cost + postage_cost (if shipping included)",
    "item_price_before_fees": "vinyl_cost + transfer_tape_cost + labor_cost + packaging_cost + overhead",
    "etsy_transaction_fee": "item_price_before_fees * 0.065",
    "final_customer_price": "round_to_step(item_price_before_fees + etsy_transaction_fee, step=0.10)",
    "shipping_price_to_customer": "postage_cost (and packaging if charging separately)"
  },
